block content
	h1.support-title How Can We Help Today?

	iframe(
		data-tally-src="https://tally.so/embed/mJJ88R?alignLeft=1&hideTitle=1&transparentBackground=1&dynamicHeight=1"
		loading="lazy"
		width="100%"
		height="553"
		frameborder="0"
		marginheight="0"
		marginwidth="0"
		title="NoteRoom Supportüõ†Ô∏è"
	)


	//- Inline script for Tally embed
	script.
		var d = document,
			w = "https://tally.so/widgets/embed.js",
			v = function () {
				"undefined" != typeof Tally
					? Tally.loadEmbeds()
					: d
						.querySelectorAll("iframe[data-tally-src]:not([src])")
						.forEach(function (e) {
							e.src = e.dataset.tallySrc;
						});
			};
		if ("undefined" != typeof Tally) v();
		else if (d.querySelector('script[src="' + w + '"]') == null) {
			var s = d.createElement("script");
			(s.src = w), (s.onload = v), (s.onerror = v), d.body.appendChild(s);
		}


