{% extends "partials/layout.njk" %}

{% block title %}
	404 - Page Not Found
{% endblock %}

{% block content %}
	<section class="flex justify-center mt-20 mb-20">
        <div class="text-center">
            <h1 class="text-7xl font-extrabold text-gray-800">404</h1>
            <h2 class="text-2xl font-semibold text-gray-700 mt-4">{{ title or "Page Not Found" }}</h2>
            <p class="text-gray-500 mt-2">{{ message or "Sorry, we couldn’t find the page you’re looking for." }}</p>
            <a
                href="/"
                class="inline-block mt-6 px-6 py-3 bg-blue-600 text-white font-medium rounded-lg shadow hover:bg-blue-700 transition">
                Go Back Home
            </a>
        </div>
    </section>
{% endblock %}

{% block scripts %}
    <script src="https://cdn.tailwindcss.com"></script>
{% endblock %}
